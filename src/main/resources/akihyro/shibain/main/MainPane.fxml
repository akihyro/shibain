<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.*?>
<?import org.controlsfx.glyphfont.*?>

<fx:root type="akihyro.shibain.main.MainPane"
    xmlns="http://javafx.com/javafx/8"
    xmlns:fx="http://javafx.com/fxml">

    <stylesheets>
        <URL value="@MainPane.css" />
    </stylesheets>

    <HBox styleClass="opsBar">
        <Button text="出勤"
                maxWidth="Infinity"
                HBox.hgrow="ALWAYS"
                styleClass="opsButton"
                onAction="#checkin">
            <graphic>
                <Glyph fontFamily="FontAwesome"
                       icon="SIGN_IN"
                       styleClass="opsButtonIcon" />
            </graphic>
        </Button>
        <Button text="退勤"
                maxWidth="Infinity"
                HBox.hgrow="ALWAYS"
                styleClass="opsButton"
                onAction="#checkout">
            <graphic>
                <Glyph fontFamily="FontAwesome"
                       icon="SIGN_OUT"
                       styleClass="opsButtonIcon" />
            </graphic>
        </Button>
        <Button styleClass="opsButton"
                onAction="#toggleConfig">
            <graphic>
                <Glyph fontFamily="FontAwesome"
                       icon="GEAR"
                       styleClass="opsButtonIcon" />
            </graphic>
        </Button>
    </HBox>

    <HBox
        VBox.vgrow="ALWAYS"
        styleClass="webViewWrapper">
        <WebView fx:id="webView"
                HBox.hgrow="ALWAYS" />
    </HBox>

</fx:root>
