<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.*?>
<?import org.controlsfx.control.*?>
<?import org.controlsfx.glyphfont.*?>
<?import akihyro.shibain.config.*?>

<VBox fx:id="root"
    fx:controller="akihyro.shibain.MainViewController"
    xmlns="http://javafx.com/javafx/8"
    xmlns:fx="http://javafx.com/fxml">

    <stylesheets>
        <URL value="@main.css" />
    </stylesheets>

    <fx:define>
        <ConfigPopOver fx:id="configPopOver" />
    </fx:define>

    <HBox styleClass="opsBar">
        <Button text="出勤"
                maxWidth="Infinity"
                HBox.hgrow="ALWAYS"
                styleClass="opsButton"
                onAction="#checkin">
            <graphic>
                <Glyph fontFamily="FontAwesome"
                       icon="SIGN_IN"
                       styleClass="opsButtonIcon" />
            </graphic>
        </Button>
        <Button text="退勤"
                maxWidth="Infinity"
                HBox.hgrow="ALWAYS"
                styleClass="opsButton"
                onAction="#checkout">
            <graphic>
                <Glyph fontFamily="FontAwesome"
                       icon="SIGN_OUT"
                       styleClass="opsButtonIcon" />
            </graphic>
        </Button>
        <Button styleClass="opsButton"
                onAction="#toggleConfig">
            <graphic>
                <Glyph fontFamily="FontAwesome"
                       icon="GEAR"
                       styleClass="opsButtonIcon" />
            </graphic>
        </Button>
    </HBox>

    <WebView fx:id="webView"
            VBox.vgrow="ALWAYS"
            styleClass="webView" />

</VBox>
